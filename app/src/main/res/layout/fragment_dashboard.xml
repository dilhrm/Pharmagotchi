<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.home.HomeFragment">

    <FrameLayout
        android:id="@+id/pharmagotchiContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.15">

        <ImageView
            android:id="@+id/pharmagotchiFeet"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/pharmagotchi_feet"
            android:contentDescription="Pharmagotchi feet"
            android:scaleType="fitCenter"
            android:layout_gravity="bottom|center_horizontal" />

        <ImageView
            android:id="@+id/pharmagotchiBody"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/pharmagotchi_body"
            android:contentDescription="Pharmagotchi body"
            android:scaleType="fitCenter"
            android:layout_gravity="bottom|center_horizontal" />

    </FrameLayout>

    <TextView
        android:id="@+id/pharmagotchiNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pharmagotchi"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/main_blue"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/pharmagotchiContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/pharmagotchiStatusSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Status explanation"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/pharmagotchiNameText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/manageMedicationsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Medications"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/pharmagotchiStatusSubtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/manageConditionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Conditions"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/manageMedicationsButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>