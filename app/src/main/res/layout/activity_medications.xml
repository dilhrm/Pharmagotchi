<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MedicationsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medications"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/main_blue"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select any medications you take:"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/commonMedicationsChipGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:singleSelection="false"
            app:chipSpacingHorizontal="8dp"
            app:layout_constraintTop_toBottomOf="@id/subtitleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMetformin"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Metformin"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipLisinopril"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lisinopril"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAspirin"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aspirin"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAtorvastatin"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atorvastatin"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAlbuterol"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Albuterol"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipIbuprofen"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ibuprofen"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipOmeprazole"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Omeprazole"
                android:checkable="true" />

        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/customLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other medications (separate with commas):"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/commonMedicationsChipGroup"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/customMedicationsInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="e.g., Vitamin D, Multivitamin"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:inputType="textCapWords"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/customLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/noMedicationsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="I don't take any medications"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="@color/main_blue"
            android:textColor="@color/main_blue"
            app:layout_constraintTop_toBottomOf="@id/customMedicationsInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/doneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:textSize="20sp"
            android:paddingStart="64dp"
            android:paddingEnd="64dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:backgroundTint="@color/main_blue"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/noMedicationsButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
