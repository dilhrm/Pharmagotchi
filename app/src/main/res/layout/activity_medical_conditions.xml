<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MedicalConditionsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical Conditions"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/main_blue"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select any conditions you have:"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/titleText"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/commonConditionsChipGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:singleSelection="false"
            app:chipSpacingHorizontal="8dp"
            app:layout_constraintTop_toBottomOf="@id/subtitleText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDiabetes"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diabetes"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHypertension"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hypertension"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAsthma"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Asthma"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipHeartDisease"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Heart Disease"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipArthritis"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arthritis"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAnxiety"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anxiety"
                android:checkable="true" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDepression"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Depression"
                android:checkable="true" />

        </com.google.android.material.chip.ChipGroup>

        <TextView
            android:id="@+id/customLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other conditions (separate with commas):"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/commonConditionsChipGroup"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/customConditionsInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="e.g., Migraine, COPD"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textColorHint="#808080"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:inputType="textCapWords"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/customLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/noConditionsButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="I just want to track my health"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="@color/main_blue"
            android:textColor="@color/main_blue"
            app:layout_constraintTop_toBottomOf="@id/customConditionsInput"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:textSize="20sp"
            android:paddingStart="64dp"
            android:paddingEnd="64dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:backgroundTint="@color/main_blue"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintTop_toBottomOf="@id/noConditionsButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
